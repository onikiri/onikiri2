<?xml version="1.0" encoding="UTF-8"?>
<MakeConfiguration 
  SourceFile="../../msvc/onikiri2/onikiri2.vcxproj"
  SourceConfiguration="Release|x64"
  UsePrecompiledHeader="1"
>
  <Platforms>
    
    <Platform 
      Name="linux" 
      HostString="Linux"
      CXX="g++" 
      CXXFlags="-Wall -Werror -O2 -g -std=c++11 -DONIKIRI_DEBUG -Wno-deprecated-declarations -Wno-unused-const-variable -Wno-unused-private-field"
      LDFlags="-static -lpthread" 
      CleanTargets="*.o *.d *.gch"
      WorkingDirectory="WorkLinux" 
      OutputFile="a.out"
    >
      <AdditionalFlags>
        <!-- 
          All warnings are disabled in the libraries.
          See "SysDeps/Boost/Boost.h", which includes pragmas that also disable 
          warning when compiling the boost headers.
        -->
        <Entry PathPattern="lib/boost/boost_" CXXFlags="-w"/>
        <Entry PathPattern="lib/tinyxml" CXXFlags="-w"/>
      </AdditionalFlags>
      <IncludeDirectories>
        <Directory Path="../../../src"/>
        <Directory Path="../../../src/pch"/>
        <Directory Path="../../../lib"/>
        <Directory Path="../../../lib/boost/boost_1_65_1"/>
        <Directory Path="../../../lib/zlib"/>
      </IncludeDirectories>
      <LibraryDirectories>
        <Directory Path="../zlib"/>
      </LibraryDirectories>
      <Libraries>
        <Library Name="z"/>
      </Libraries>
      
      <!--
        You can add custom build steps to each platform
        by using a <CustomBuildConfigurations> section.

        <CustomBuildConfigurations>
          <CustomBuild
            OutputFile="<output>"
            InputFile="<input>"
            Command="<test>"
          />
        </CustomBuildConfigurations>
      -->

    </Platform>
    
    <!-- 
      We use '-std=gnu++11' instead of '-std=std++11' because some elements such as
      'fileno' are not defined in the c++11 mode in cygwin.
    -->
    <Platform 
      Name="cygwin"
      HostString="CYGWIN" 
      CXX="g++" 
      CXXFlags="-Wall -Werror -O2 -g -std=gnu++11 -Wno-unused-variable -DONIKIRI_DEBUG -D__USE_W32_SOCKETS"
      LDFlags="-static"
      CleanTargets="*.o *.d *.gch"
      WorkingDirectory="WorkCygwin"
      OutputFile="a.out"
    >
      <AdditionalFlags>
        <!-- All warnings are disabled in the libraries -->
        <Entry PathPattern="lib/boost/boost_" CXXFlags="-w"/>
        <Entry PathPattern="lib/tinyxml" CXXFlags="-w"/>
      </AdditionalFlags>
      <IncludeDirectories>
        <Directory Path="../../../src"/>
        <Directory Path="../../../src/pch"/>
        <Directory Path="../../../lib"/>
        <Directory Path="../../../lib/boost/boost_1_65_1"/>
        <Directory Path="../../../lib/zlib"/>
      </IncludeDirectories>
      <LibraryDirectories>
        <Directory Path="../zlib"/>
      </LibraryDirectories>
      <Libraries>
        <Library Name="z"/>
        <Library Name="wsock32"/>
        <Library Name="ws2_32"/>
      </Libraries>
    </Platform>

  </Platforms>
</MakeConfiguration>
